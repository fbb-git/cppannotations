#!/bin/sh

cd `dirname $0`
CPPDIR=`cd ..;pwd`
CPP=`basename $CPPDIR`
cd `dirname $CPPDIR`

cp $CPP/single/legal.shtml $CPP/zip

if [ -s $CPP/zip/cplusplus.txt ] ; then
    rm -f $CPP/zip/cplusplus.txt.zip
    zip -m $CPP/zip/cplusplus.txt.zip   $CPP/zip/cplusplus.txt\
                                        $CPP/zip/legal.shtml

    zip $CPP/zip/cplusplus.txt.zip      $CPP/changelog
fi
